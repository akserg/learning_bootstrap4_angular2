{
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es5"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "types": [
      "core-js",
      "firebase",
      "node",
      "moment"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "angularCompilerOptions": {
    "skipMetadataEmit" : true,
    "debug": true
 }
}
